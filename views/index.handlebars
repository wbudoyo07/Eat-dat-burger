<h1>test </h1>

<ul>
    {{#each burgers}}
        {{#unless devoured}}
            {{>burgersList/burgers-block hungry=true}}
        {{/unless}}    
    {{/each}}
</ul>

<h2>test 2</h2>
<ul>
    {{#each burgers}}
        {{#if devoured}}
             {{> burgersList/burgers-block hungry=false}}
        {{/if}}
    {{/each}}
</ul>

<h3> add burger</h3>
<form class= "create-form">

    <div class ="form- group">
        <label for="burgers-label">Burger name:</label>
        <input type="text" id="burgers-input" name="name">
    </div>

    <div class ="form-group">
        <label for="devoured">Devoured</label>
        <input type="radio" name ="devoured" value="1" checked>
        <input type="radio" name ="devoured" value="0" eaten>

    </div>
     <button type="submit">Add burger</button>
</form>